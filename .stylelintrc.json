{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "max-empty-lines": 1,
    "no-empty-source": null,
    "selector-class-pattern": "^[$a-z0-9-_]+$",
    "value-list-max-empty-lines": null,
    "scss/no-global-function-names": null
  },
  "ignoreFiles": [
    ".cache/*",
    ".parcel-cache/*",
    "dist/*",
    "src/**/normalize.pcss"
  ]
}
