{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "### Откройте pull request в ветку main из ветки, где вы разрабатывали проект, и добавьте ссылку на этот pr в README.md в ветке main.  ### ВАЖНО: pull request должен называться “Sprint i” (i — номер спринта).",
  "scripts": {
    "dev": "parcel ./src/index.html --no-source-maps --no-cache",
    "build": "run-s clean build:*",
    "build:parcel": "parcel build ./src/pages/*.hbs --no-cache",
    "server": "node ./server.js",
    "start": "run-s build server",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cache": "rimraf .parcel-cache && rimraf .cache",
    "eslint": "node_modules/.bin/eslint ./src/**/*.{js,ts}",
    "eslint:fix": "node_modules/.bin/eslint ./src/**/*.{js,ts} --fix",
    "stylelint": "stylelint './src/**/*.pcss'",
    "stylelint:fix": "stylelint './src/**/*.pcss' --fix",
    "lint": "run-p eslint stylelint",
    "lint:fix": "run-p eslint:fix stylelint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kokoccc/middle.messenger.praktikum.yandex.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kokoccc/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/kokoccc/middle.messenger.praktikum.yandex#readme",
  "dependencies": {
    "express": "^4.18.1",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "nanoid": "^4.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "^1.0.9",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@parcel/transformer-raw": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.19.0",
    "eslint-config-airbnb": "^19.0.4",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.6.2",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "parcel-transformer-handlebars": "^1.0.0",
    "parcel-transformer-hbs": "^1.0.4",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.14",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-calc": "^8.2.4",
    "postcss-import": "^14.1.0",
    "postcss-map-get": "^0.3.0",
    "postcss-nested": "^5.0.6",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "url": "^0.11.0",
    "util": "^0.12.4"
  },
  "alias": {
    "components": "~/src/components",
    "images": "~/src/images",
    "layouts": "~/src/layouts",
    "pages": "~/src/pages",
    "utils": "~/src/utils"
  }
}
