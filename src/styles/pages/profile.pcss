.profile {
  display: flex;
  flex-direction: column;
}

.profile__avatar-wrapper {
  align-self: center;
  width: 160px;
  height: 160px;
  display: flex;
  overflow: hidden;
  border: 1px solid map-get($colors, gray-lighter);
  border-radius: 50%;
}

.profile__separator {
  width: 100%;
  height: 1px;
  border: none;
}
