{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types",
      "src/types/global.d.ts",
      "src/types/formats.d.ts"
    ]
  },
  "exclude": [
    ".cache",
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
